{
  "manifest_version": 3,
  "name": "幻影",
  "version": "1.7.6",
  "description": "专业的SRC漏洞挖掘辅助工具，自动提取页面中的敏感信息",
  "author": "Phantom&yihuo&Xuan8a1",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "cookies",
    "offscreen",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "filters/api-filter.js",
        "filters/domain-phone-filter.js",
        "filters/id-card-filter.js",
        "src/scanner/PatternExtractor.js",
        "src/scanner/ContentExtractor.js",
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "filters/api-filter.js",
        "filters/domain-phone-filter.js",
        "filters/id-card-filter.js",
        "src/scanner/PatternExtractor.js",
        "src/scanner/ContentExtractor.js",
        "src/scanner/DeepScanWindow.js",
        "src/core/injector.js",
        "src/api/PackerBridge.js",
        "src/ui/PackerIntegrationUI.js",
        "test-results.html",
        "test-window.html",
        "deep-scan-window.html",
        "src/api/test-window-script.js",
        "src/scanner/deep-scan-window-script.js",
        "deep-scan-fix-patch.js",
        "offscreen.html",
        "offscreen.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "幻影",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
